<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WinActivity">

    <Space
        android:id="@+id/upperSpace"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/lowerSpace"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout" />

    <ImageView
        android:id="@+id/upperBlocker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/lowerBlocker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/upper_blocker"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/lowerBlocker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upperBlocker"
        app:srcCompat="@drawable/lower_blocker"
        tools:ignore="ContentDescription" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/lowerSpace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upperSpace">

        <ImageView
            android:id="@+id/winBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/editbox_background"
            tools:ignore="ContentDescription" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/space2"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/winText"/>

        <TextView
            android:id="@+id/winText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/win"
            android:textColor="@color/colorText"
            android:textSize="@dimen/win_text_size"
            app:layout_constraintVertical_weight="2"
            app:layout_constraintBottom_toTopOf="@id/space3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/space2" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/space3"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toBottomOf="@id/winText"
            app:layout_constraintBottom_toTopOf="@id/menuButton"/>

        <ImageView
            android:id="@+id/menuButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="goToMenu"
            app:layout_constraintVertical_weight="2"
            app:layout_constraintBottom_toTopOf="@id/space"
            app:layout_constraintEnd_toStartOf="@id/restartButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/space3"
            app:srcCompat="@drawable/menu_button"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/restartButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="restartGame"
            app:layout_constraintBottom_toBottomOf="@+id/menuButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/menuButton"
            app:layout_constraintTop_toTopOf="@id/menuButton"
            app:srcCompat="@drawable/replay"
            tools:ignore="ContentDescription" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/space"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toBottomOf="@id/menuButton"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>